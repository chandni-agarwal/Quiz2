apiVersion: apps/v1
kind: Deployment
metadata:
  name: web-app
spec:
  replicas: 3
  selector:
    matchLabels:
      app: web-app
  template:
    metadata:
      labels:
        app: web-app
    spec:
      nodeSelector:
        team: dev
        env: tst
        critical: no
      containers:
      - name: web-container
        image: nginx:latest
        ports:
        - containerPort: 80
---
